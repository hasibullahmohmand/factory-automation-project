                <div>
                    Order
                </div>
            </NavLink>
            </div>
            <div class="navigation-item">
            <NavLink href="cart">
                <div>
                     <img src="/icons/shopping-cart.png" />
                </div> 
                <div>
                    Cart
                </div>
            </NavLink>
            </div>
