</HeadContent>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="page-top">
            <div class="search-bar"> 
                <input type="search" name="search-bar" class="" placeholder="Search" />
                <button><img src="/icons/find.png" /></button>
            </div>
            <div class="navigation-item">
            <NavLink href="order">
                <div class="order-icon">
                    <img src="/icons/order.png" />
