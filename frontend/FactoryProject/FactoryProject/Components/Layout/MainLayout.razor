                        </div>
                    </NavLink>
                </div>
            </AuthorizeView> *@
            <div class="navigation-item">
            <NavLink href="logoutcontrol">
                <div class="logout-icon">
                    <img src="/icons/logout.png" />
                </div>
                <div>
                    Logout
                </div>
            </NavLink>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

